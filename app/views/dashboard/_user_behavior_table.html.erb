<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr class="info">
      <th class="text-center">Item</th>
      <th class="text-center">User</th>
      <th class="text-center">Amount</th>
    </tr>
  </thead>
  <tbody>
    <% stats.each do |stat| %>
      <tr>
        <td><%= stat.first %></td>
        <td><%= stat[1] %></td>
        <td class="text-right"><%= number_to_human stat.last %></td>
      </tr>
    <% end %>
  </tbody>
</table>